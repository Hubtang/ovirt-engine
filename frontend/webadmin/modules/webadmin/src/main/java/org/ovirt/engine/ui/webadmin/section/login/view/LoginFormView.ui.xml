<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog" xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
    xmlns:w="urn:import:org.ovirt.engine.ui.common.widget" xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field='resources' type='org.ovirt.engine.ui.webadmin.ApplicationResources' />
    <ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants'/>

    <ui:style>
		@external language-menu-container;
		.language-menu-container{}

		@external language-menu-container;
		@external btn-group;
		@external btn-hidden;
		.language-menu-container .btn-group .btn-hidden{}

		.language-menu-container .btn-group .btn-hidden:focus{}

		@external modal-login-container;
		.modal-login-container {}


		@external modal-header;
		.modal-login-container .modal-header {}
			@external modal-body;
		.modal-login-container .modal-body {}

		@external alert;
		.modal-login-container .alert {}

		@external modal-form-container;
		.modal-login-container .modal-body .modal-form-container {}

		.modal-login-container .modal-body h4{}

		@external btn;
		.modal-login-container .modal-body form .btn{}

		@external inner-addon;
		.inner-addon {}

		@external fa;
		.inner-addon .fa {}

		@external fa-user;
		.fa-user {}

		@external fa-key;
		.fa-key {}

		@external fa-puzzle-piece;
		.fa-puzzle-piece {}

		@external fa-warning;
		.fa-warning {}

		@external left-addon;
		.left-addon .fa  {}
		@external right-addon;
		.right-addon .fa {}

		.left-addon input  {}
		.right-addon input {}

		.left-addon select  {}
		.right-addon select {}


		@external btn-group;
		.btn-group .btn-hidden{}

		.btn-group .btn-hidden:focus{}
    </ui:style>

    <g:FocusPanel ui:field="loginForm">
    <g:HTMLPanel>
    <div class="modal-dialog">
        <div class="modal-content modal-login-container">
            <div class="modal-header">
                <g:HTMLPanel ui:field="informationMessagePanel">
	                <i class="fa fa-warning fa-3x pull-left"></i>
	                <g:HTML HTML="{constants.browserNotSupported}"></g:HTML>
                </g:HTMLPanel>
            </div>
            <div class="modal-body">
                <b:Alert ui:field="errorMessagePanel" addStyleNames="alert-danger">
                    <b:Label styleName="" ui:field="errorMessage"/>
                </b:Alert>
                <div class="modal-form-container">
                    <div class="row" style="margin-bottom: 10px;">
                        <div class="col-xs-6">
                            <h4>
                                <b:Label styleName="" text="{constants.loginButtonLabel}"/>
                            </h4>
                        </div>
                        <div class="col-xs-6">
                            <div class="btn-group pull-right">
                                <b:ListBox ui:field="localeBox" />
                            </div>
                        </div>
                    </div>
                    <form role="form">
                        <div class="form-group">
                            <div class="inner-addon left-addon">
                                <i class="fa fa-user"></i>
                                <b:Input styleName="form-control" type="TEXT" placeholder="{constants.loginFormUserNameLabel}" ui:field="userNameEditor"></b:Input>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="inner-addon left-addon">
                                <i class="fa fa-key"></i>
                                <b:Input styleName="form-control" type="PASSWORD" placeholder="{constants.loginFormPasswordLabel}" ui:field="passwordEditor"></b:Input>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="inner-addon left-addon">
                                <i class="fa fa-puzzle-piece" />
                                <b:ListBox ui:field="profileEditor" />
                            </div>
                        </div>

                        <w:PatternflyUiCommandButton styleName="btn btn-primary btn-block" ui:field="loginButton"></w:PatternflyUiCommandButton>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </g:HTMLPanel>
    </g:FocusPanel>

</ui:UiBinder>
