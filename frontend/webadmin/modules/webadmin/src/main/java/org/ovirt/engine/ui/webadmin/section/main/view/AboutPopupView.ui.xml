<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
	xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
	xmlns:w="urn:import:org.ovirt.engine.ui.common.widget">

	<ui:style>
		.content {
		}

		.copyrightNotice {
			font-weight: bold;
		}
		.buttonStyle {
            float: left;
            padding-top: 5px;
            padding-right: 5px;
        }
        .publicKeyEditor {
            height: 100px;
            width: 100%;
            padding-left: 5px;
            line-height: normal;
            font-family: "Courier New", Courier, monospace;
        }
	</ui:style>

	<d:SimpleDialogPanel width="500px" height="300px">
		<d:header>
			<g:Label ui:field="titleLabel" />
		</d:header>

		<d:content>
			<g:VerticalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="{style.content}">
				<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" width="100%">
			          <g:HTMLPanel>
						<div>
							<g:InlineLabel ui:field="versionLabel" />
						</div>
						<div>
							<g:Label ui:field="copyrightNotice" addStyleNames="{style.copyrightNotice}"/>
						</div>
							<g:HTMLPanel ui:field="cnterprise">
							<div>
								<g:Label ui:field="licenseNotice" />
							</div>
								<g:HTMLPanel ui:field="superUser">
								<div>
								    <g:Label  />
									<g:InlineLabel>注册码</g:InlineLabel>
									<g:InlineLabel ui:field="pollCode" />
								</div>
								<div>
									<g:InlineLabel>激活码</g:InlineLabel>
									<ge:StringEntityModelTextArea ui:field="activeCode"  addStyleNames="{style.publicKeyEditor}" />
									<w:UiCommandButton ui:field="activatButton"  label="激活" addStyleNames="{style.buttonStyle}"/>
								</div>
								</g:HTMLPanel>
							</g:HTMLPanel>
				      </g:HTMLPanel>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</d:content>

		<d:footerButton>
			<d:SimpleDialogButton ui:field="closeButton" />
		</d:footerButton>
	</d:SimpleDialogPanel>

</ui:UiBinder>
